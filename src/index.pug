  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Prompt:wght@500;700&display=swap")
    link(rel="stylesheet", href="composition.css")
    title CSS Grid Mondrian
  body
    h1 CSS Grid Mondrian

    - var composition = "https://github.com/ixkaito/css-grid-mondrian/blob/master/src/composition.scss";
    - var google = "https://www.google.com/search?tbm=isch&q=";

    mixin a(from, to, color)
      - for(var i = from; i <= to; i++)
        div(class=`a${i} ${color}`)

    a.canvas.composition-with-large-red-plane-yellow-black-gray-and-blue-1921(
      href=`${composition}#L80-L103`
      target="_blank"
      rel="noopener"
    )
      +a(1, 3, 'red')
      +a(4, 10, 'yellow')
      +a(11, 29, 'black')
      +a(30, 34, 'gray')
      +a(35, 35, 'blue')
    h2
      a(
        href=`${google}Composition+with+Large+Red+Plane,+Yellow,+Black,+Gray,+and+Blue,+1921`
        target="_blank"
        rel="noopener"
      ) Composition with Large Red Plane, Yellow, Black, Gray, and Blue, 1921

